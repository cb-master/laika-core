<?xml version="1.0"?>
<ruleset name="Laika PHP Compatibility">
    <description>Ensures compatibility with PHP 8.1 and above.</description>

    <!-- Directories to scan -->
    <file>src</file>
    <file>helpers</file>

    <!-- PHPCompatibility standard -->
    <rule ref="PHPCompatibility"/>

    <!-- Define target PHP version -->
    <config name="testVersion" value="8.1-8.4"/>

    <!-- Optional exclusions -->
    <exclude-pattern>vendor/</exclude-pattern>
</ruleset>
